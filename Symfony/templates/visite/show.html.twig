{% extends 'base.html.twig' %}

{% block title %}Visite{% endblock %}

{% block body %}
    <h1>Visite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ visite.id }}</td>
            </tr>
            <tr>
                <th>HeureDebut</th>
                <td>{{ visite.heureDebut ? visite.heureDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HeureFin</th>
                <td>{{ visite.heureFin ? visite.heureFin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NbPlaces</th>
                <td>{{ visite.nbPlaces }}</td>
            </tr>
            <tr>
                <th>DateVisite</th>
                <td>{{ visite.dateVisite ? visite.dateVisite|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('visite_index') }}">back to list</a>

    <a href="{{ path('visite_edit', {'id': visite.id}) }}">edit</a>

    {{ include('visite/_delete_form.html.twig') }}
{% endblock %}
